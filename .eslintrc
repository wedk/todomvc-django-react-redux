{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "jasmine": true
  },

  "parser": "babel-eslint",

  "plugins": [
    "react"
  ],

  "ecmaFeatures": {
    "jsx": true
  },

  "extends": "eslint:recommended",

  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "brace-style": 2,
    "quotes": [2, "single", "avoid-escape"],
    "no-underscore-dangle": 0,
    "block-scoped-var": 2,
    "space-after-keywords": 2,
    "eol-last": 0,
    "max-len": [1, 120, 2],
    "key-spacing": 0,
    "jsx-quotes": 1,
    "no-unused-vars": [1, {"args": "after-used", "argsIgnorePattern": "^_"}],

    /* react specific rules */
    "react/display-name": [1, { "acceptTranspilerName": true }],
    "react/forbid-prop-types": 0,
    "react/jsx-boolean-value": 1,
    "react/jsx-closing-bracket-location": [1, 'after-props'],
    "react/jsx-curly-spacing": 1,
    "react/jsx-equals-spacing": [1, "never"],
    "react/jsx-handler-names": 1,
    "react/jsx-indent-props": [1, 2],
    "react/jsx-indent": [2, 2],
    "react/jsx-key": 1,
    "react/jsx-max-props-per-line": [1, {maximum: 2}],
    "react/jsx-no-bind": 1,
    "react/jsx-no-duplicate-props": 1,
    "react/jsx-no-literals": 0,
    "react/jsx-no-undef": 1,
    "react/jsx-pascal-case": 1,
    "react/jsx-sort-prop-types": [0, { "callbacksLast": true, "ignoreCase": false }],
    /* prefer: key, spread, other attributes, style, callbacks */
    "react/jsx-sort-props": [0, { "callbacksLast": true, "ignoreCase": false }],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-danger": 1,
    "react/no-deprecated": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-direct-mutation-state": 1,
    "react/no-is-mounted": 1,
    "react/no-multi-comp": 1,
    "react/no-set-state": 0,
    "react/no-string-refs": 1,
    "react/no-unknown-property": 1,
    "react/prefer-es6-class": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/require-extension": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "react/wrap-multilines": 1
  }
}